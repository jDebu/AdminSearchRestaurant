<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:context="com.coditron.project.adminsearchrestaurant.Views.Fragments.PickSedeFragment">
<RelativeLayout
    android:id="@+id/layout_subtitle"
    android:background="@color/subtitle_background"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:gravity="center_vertical"
    android:paddingLeft="16dp">
    <TextView
        android:id="@+id/text_subtitle"
        android:text="@string/subtitle_sede"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<LinearLayout
    android:layout_below="@+id/layout_subtitle"
    android:padding="16dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:text="Seleccionar sede:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"/>

    <Spinner
        android:hint="Lima"
        android:layout_gravity="right"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_sede" />

</LinearLayout>

</LinearLayout>