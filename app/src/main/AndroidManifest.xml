<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coditron.project.adminsearchrestaurant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeActionBar" >
        <activity
            android:name=".Views.Activities.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.Activities.ErrorWelcomeActivity"
            android:label="@string/title_activity_error_welcome" >
        </activity>
        <activity
            android:name=".Views.Activities.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Views.Activities.NewUserActivity"
            android:label="@string/title_activity_new_user"
            android:parentActivityName=".Views.Activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.Activities.LoginActivity" />
        </activity>
        <activity
            android:name=".Views.Activities.ConfirmationAddUserActivity"
            android:label="@string/title_activity_confirmation_add_user"
            android:parentActivityName=".Views.Activities.NewUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.Activities.NewUserActivity" />
        </activity>
        <activity
            android:name=".Views.Activities.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".Views.Activities.SplashLoginActivity"
            android:label="@string/title_activity_splash_login" >
        </activity>
        <activity
            android:name=".Views.Activities.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".Views.Activities.VerifyCodeRecoverPassActivity"
            android:label="@string/title_activity_verify_code_recover_password">
        </activity>
        <activity
            android:name=".Views.Activities.InputNewPasswordActivity"
            android:label="@string/title_activity_input_new_pass"
            android:parentActivityName=".Views.Activities.VerifyCodeRecoverPassActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.Activities.VerifyCodeRecoverPassActivity" />
        </activity>
    </application>

</manifest>
