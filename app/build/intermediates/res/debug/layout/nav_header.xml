<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/material_background3"
    android:layout_gravity="bottom"
    android:padding="@dimen/header_left_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_perfil"
        android:layout_width="@dimen/perfil_image_size"
        android:layout_height="@dimen/perfil_image_size"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil2"
        app:border_color="@android:color/white"
        app:border_width="1dp" />
    <!-- Nombres y Apellidos de Usuario -->
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juana Maria Perez"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <!-- Tipo de Usuario y Sede -->
    <TextView
        android:id="@+id/text_type_sede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrador / Lima"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout><!-- From: file:/home/estacion/AndroidStudioProjects/AdminSearchRestaurant/app/src/main/res/layout/nav_header.xml -->