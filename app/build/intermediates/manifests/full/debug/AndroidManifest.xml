<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coditron.project.adminsearchrestaurant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeActionBar" >
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.ErrorWelcomeActivity"
            android:label="@string/title_activity_error_welcome" >
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.NewUserActivity"
            android:label="@string/title_activity_new_user"
            android:parentActivityName="com.coditron.project.adminsearchrestaurant.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coditron.project.adminsearchrestaurant.LoginActivity" />
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.ConfirmationAddUserActivity"
            android:label="@string/title_activity_confirmation_add_user"
            android:parentActivityName="com.coditron.project.adminsearchrestaurant.NewUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coditron.project.adminsearchrestaurant.NewUserActivity" />
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.SplashLoginActivity"
            android:label="@string/title_activity_splash_login" >
        </activity>
        <activity
            android:name="com.coditron.project.adminsearchrestaurant.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
    </application>

</manifest>